<h2 class="text-center border-bottom mb-5 p-1">Avis des visiteurs du Zoo</h2>
<div class="container mb-5">
        {% for avi in avis %}
            <div class="container border rounded-top mb-2  bg-body-secondary">
            {% if avi.isVisible == true %}
                <div class="d-flex justify-content-between border-bottom border-secondary mb-2 pt-1">
                    <h3>{{ avi.pseudo | title}}</h3>
                    <small class="text-body-secondary">Depos√© le : {{ avi.CreatedAt |format_datetime('full', 'none', locale='fr') }}</small>
                </div>
                <p>{{ avi.comments }}</p>
            {% endif %}
            </div>
        {% endfor %}
 </div>
    <h3>Vos avis compte pour nous: </h3>
 <div class="container border border-1 border-dark rounded ">
     {{ form(form) }}
 </div>
