{% extends 'admin/admin.html.twig' %}

{% block title %}Admin - Les Utilisateurs{% endblock %}

{% block main %}
    <h1>Les Utilisateurs</h1>
    <p>
        <a class="btn btn-dark" href="{{ path('admin.user.create') }}">Crée un utilisateur</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th> Nom</th>
            <th> Prénom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td style="width: 100px">{{user.lastname}}</td>
                <td style="width: 100px">{{user.firstname}}</td>
                <td style="width: 100px">{{user.email}}</td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.user.edit', {id: user.id})}}"><i class="bi bi-pen p-1"></i></a>
                        <form action="{{ path('admin.user.delete', {id: user.id})}}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash p-1"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}