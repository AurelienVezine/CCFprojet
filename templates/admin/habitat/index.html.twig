{% extends 'admin/admin.html.twig' %}

{% block title %}Admin - Les Habitats{% endblock %}

{% block main %}
    <h1>Les Habitats</h1>
    <p>
        <a class="btn btn-dark" href="{{ path('admin.habitat.create') }}">Ajouter un habitat</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th> Nom:</th>
            <th> Description:</th>
            <th> Etat:</th>
            <th> Commentaire:</th>
            <th> Mise Ã  jour le:</th>
            <th>Actions:</th>
        </tr>
        </thead>
        <tbody>
        {% for habitat in habitats %}
            <tr>
                <td style="width: 150px">{{habitat.nom}}</td>
                <td class="text-truncate" style="max-width: 100px;">{{habitat.description}}</td>
                <td style="width: 150px">{{habitat.etat}}</td>
                <td style="width: 150px">{{habitat.commentaire}}</td>
                <td style="width: 150px">{{ habitat.CreatedAt |format_datetime('short', 'none') }}</td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.habitat.edit', {id: habitat.id})}}"><i class="bi bi-pen p-1"></i></a>
                        <form action="{{ path('admin.habitat.delete', {id: habitat.id})}}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash p-1"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
